{
    "name": "Exchanger",
    "version": "1.1.0",
    "description": "Traffic Exchange Software",
    "main": "system.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "echo \"No linting configured\"",
        "pack:osx": "electron-builder -m --x64 --arm64",
        "pack:linux": "electron-builder -l --x64 --ia32 --armv7l --arm64",
        "pack:win32": "electron-packager . --arch=x64 && electron-packager . --arch=arm64",
        "build": "npm run pack:osx && npm run pack:linux && npm run pack:win32",
        "clean": "trash node_modules nativefier-gui-darwin-x64 nativefier-gui-darwin-x64.zip nativefier-gui-darwin-arm64 nativefier-gui-darwin-arm64.zip"
    },
    "keywords": [
        "Traffic",
        "Exchange",
        "System",
        "Surfow"
    ],
    "author": "HitFather",
    "license": "CC0-1.0",
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.63",
        "@electron-forge/publisher-github": "^6.0.0-beta.63",
        "electron": "^3.0.1",
        "electron-builder": "^20.38.2",
        "electron-packager": "^13.0.0",
        "electron-toolkit": "^1.0.24",
        "electron-winstaller": "^2.7.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mrefil/exchanger.git"
    },
    "build": {
        "appId": "com.electron.Exchanger",
        "copyright": "Copyright Â© 2018 Hassan Azzi",
        "productName": "Exchanger",
        "electronVersion": "3.0.1",
        "asar": true,
        "directories": {
            "app": "C:\\surfow_app",
            "output": "dist"
        },
        "win": {
            "publish": [
                "github"
            ]
        },
        "mac": {
            "publish": [
                "github"
            ],
            "category": "public.app-category.business"
        },
        "linux": {
            "publish": [
                "github"
            ]
        }
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "nativefier_gui"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "publishers": [
                {
                    "name": "@electron-forge/publisher-github",
                    "config": {
                        "repository": {
                            "owner": "hitfather",
                            "name": "hitfather",
                            "draft": true
                        }
                    }
                }
            ]
        }
    }
}
